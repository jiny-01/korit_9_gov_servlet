<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>first-servlet</servlet-name>
        <servlet-class>com.korit.servlet_study.ch01.FirstServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>first-servlet</servlet-name>
        <url-pattern>/ch01/firstservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>config-servlet</servlet-name>
        <servlet-class>com.korit.servlet_study.ch01.ServletConfigTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>config-servlet</servlet-name>
        <url-pattern>/ch01/config/age</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>second-servlet</servlet-name>
        <servlet-class>com.korit.servlet_study.ch01.SecondServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>second-servlet</servlet-name>
        <url-pattern>/ch01/secondservlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>secondconfig-servlet</servlet-name>
        <servlet-class>com.korit.servlet_study.ch01.ServletConfigTest2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>secondconfig-servlet</servlet-name>
        <url-pattern>/ch01/config/second</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>encoding-filter</filter-name>
        <filter-class>com.korit.servlet_study.ch09.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encoding-filter</filter-name>
        <url-pattern>/study/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>security-filter</filter-name>
        <filter-class>com.korit.servlet_study.ch09.SecurityFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>security-filter</filter-name>
        <url-pattern>/study/students</url-pattern>
    </filter-mapping>
</web-app>

<!--Servlet 은 이 파일이 main 역할-->
<!--일단 /ch01/secondservlet 로 접속해서 생성자 호출을 해야해
    그 후 /ch01/config/second 로 접속해서 SecondServlet 으로 -->